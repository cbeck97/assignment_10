@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<h3 class="text-center">@Model.TeamName</h3>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Middle Init</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Bowlers)
        {
        <tr>
            <td>@x.BowlerFirstName</td>
            <td>@x.BowlerMiddleInit</td>
            <td>@x.BowlerLastName</td>
            <td>@x.BowlerAddress</td>
            <td>@x.BowlerCity</td>
            <td>@x.BowlerState</td>
            <td>@x.BowlerZip</td>
            <td>@x.BowlerPhoneNumber</td>
        </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <div page-info="@Model.PageNumberingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
         page-class-normal="btn-outline-secondary" page-class-selected="btn-dark" class="btn-group m-1"
         page-url-teamname="@Model.TeamName">

    </div>
</div>


